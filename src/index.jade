doctype
html
	head
		meta(charset="utf-8")
	
		meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no")
		meta(name='mobile-web-app-capable', content='yes')
		meta(name='apple-mobile-web-app-capable', content='yes')
		meta(name="apple-mobile-web-app-status-bar-style", content="black")
		
		title domoticz-remote7
		
		link(rel="stylesheet", href="lib/framework7.min.css")
		
	body
		.statusbar-overlay
		.views
			.view.view-main
				.navbar
					.navbar-inner
						.center.sliding domoticz-remote7
				.pages
					.page
						.page-content
                    
		.popup.settings
			.view.navbar-fixed
				.pages
					.page
						.navbar
							.navbar-inner
								.center Settings
								.right
									a.link.settings-done(href='#') Done
						.page-content
							.content-block-title Configure your Domoticz server
							.list-block
								ul
									li
										.item-content
											.item-inner
												.item-input
													input(type='text', placeholder='IP', id='ip')
									li
										.item-content
											.item-inner
												.item-input
													input(type='text', placeholder='Port', id='port')
		
		script(type="text/javascript", src="lib/framework7.min.js")
		script(type="text/javascript", src="scripts/domoticz.js")
		script(type="text/javascript", src="scripts/main.js")
